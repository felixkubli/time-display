{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "types": [
      "lodash",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "typings",
    "typings/index.d.ts",
    "typings/globals/**.*"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
